<local:ApplicationPageBase
    x:Class="WenElevating.Todo.Pages.TaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:WenElevating.Resources.CustomControls;assembly=WenElevating.Resources"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WenElevating.Todo.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TaskPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Width="315">
            <Canvas>
                <StackPanel>
                    <Border
                        Width="50"
                        Height="50"
                        Margin="20,20,0,0"
                        controls:DragControlHelper.IsCanDrag="True"
                        Background="Red"
                        CornerRadius="5" />
                    <Border
                        Width="50"
                        Height="50"
                        Margin="20,20,0,0"
                        controls:DragControlHelper.IsCanDrag="True"
                        Background="Red"
                        CornerRadius="5" />
                </StackPanel>
            </Canvas>
        </Grid>

        <!--  可拉伸Grid  -->
        <GridSplitter
            x:Name="TaskCatgoryList"
            Grid.Column="0"
            Style="{StaticResource Todo_GridSplitterStyle}" />

        <Frame Grid.Column="1" />
    </Grid>
</local:ApplicationPageBase>
