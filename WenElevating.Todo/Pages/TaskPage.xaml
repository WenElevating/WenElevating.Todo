<local:ApplicationPageBase
    x:Class="WenElevating.Todo.Pages.TaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:WenElevating.Resources.CustomControls;assembly=WenElevating.Resources"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WenElevating.Todo.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TaskPage"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="White"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Width="315">
            <ListBox BorderThickness="0" ItemsSource="{Binding}">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="{x:Type ListBoxItem}" />
                </ListBox.ItemContainerStyle>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Canvas>
                            <Border
                                x:Name="TodoTypeItemBorder"
                                controls:DragControlHelper.IsCanDrag="True"
                                Background="Red"
                                CornerRadius="5">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="25" />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="15" />
                                    </Grid.ColumnDefinitions>
                                    <Image
                                        Grid.Column="1"
                                        Width="20"
                                        Source="{Binding Icon}" />
                                    <TextBlock
                                        Grid.Column="3"
                                        Width="25"
                                        Text="{Binding Title}" />
                                    <Grid>
                                        <TextBlock
                                            x:Name="NoteCountBlock"
                                            Width="15"
                                            Panel.ZIndex="100"
                                            Text="{Binding NoteCount}" />
                                        <RadioButton
                                            x:Name="MoreOperationButton"
                                            Width="15"
                                            Panel.ZIndex="99"
                                            Content="{StaticResource Todo_NoteList_More}" />
                                    </Grid>
                                </Grid>
                            </Border>
                        </Canvas>
                        <DataTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="NoteCountBlock" Property="Panel.ZIndex" Value="98" />
                            </Trigger>
                        </DataTemplate.Triggers>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!--  可拉伸Grid  -->
        <GridSplitter
            x:Name="TaskCatgoryList"
            Grid.Column="0"
            Style="{StaticResource Todo_GridSplitterStyle}" />

        <Frame Grid.Column="1" />
    </Grid>
</local:ApplicationPageBase>
