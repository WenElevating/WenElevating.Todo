<local:ApplicationPageBase
    x:Class="WenElevating.Todo.Pages.TaskPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:WenElevating.Resources.CustomControls;assembly=WenElevating.Resources"
    xmlns:convert="clr-namespace:WenElevating.Resources.Converters;assembly=WenElevating.Resources"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WenElevating.Todo.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:resource="clr-namespace:WenElevating.Resources.WebViews;assembly=WenElevating.Resources"
    xmlns:userControls="clr-namespace:WenElevating.Resources.UserControls;assembly=WenElevating.Resources"
    xmlns:vm="clr-namespace:WenElevating.Todo.ViewModels"
    Title="TaskPage"
    d:DataContext="{d:DesignInstance Type=vm:TaskPageViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    AllowDrop="True"
    Background="{DynamicResource PageBackground}"
    Focusable="True"
    MouseMove="TodoControl_MouseMove"
    MouseUp="TaskClassifiactionList_PreviewMouseLeftButtonUp"
    PreviewMouseDown="ApplicationPageBase_PreviewMouseDown"
    mc:Ignorable="d">
    <Page.Resources>
        <!--  转换器  -->
        <convert:NoteCountToVisibilityConverter x:Key="NoteCountToVisibilityConverter" />

        <!--  样式  -->
        <Style x:Key="ClassificationListItemStyle" TargetType="{x:Type ListBoxItem}">
            <Setter Property="Margin" Value="6,0,7,1" />
            <Setter Property="Height" Value="42" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="AutomationProperties.Name" Value="{Binding Title}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border
                            x:Name="border"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            AllowDrop="True"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5"
                            FocusVisualStyle="{x:Null}"
                            PreviewMouseLeftButtonDown="TaskClassifiactionList_PreviewMouseLeftButtonDown">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="55" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="25" />
                                </Grid.ColumnDefinitions>
                                <Image
                                    Grid.Column="1"
                                    Width="19"
                                    Source="{Binding Icon}" />
                                <TextBlock
                                    Grid.Column="3"
                                    VerticalAlignment="Center"
                                    Foreground="#191919"
                                    Text="{Binding Title}" />
                                <Grid
                                    Grid.Column="5"
                                    Margin="0,0,9,0"
                                    HorizontalAlignment="Stretch">
                                    <TextBlock
                                        x:Name="NoteCountBlock"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        FontSize="11"
                                        Foreground="#838383"
                                        Text="{Binding NoteCount}"
                                        Visibility="{Binding NoteCount, Converter={StaticResource NoteCountToVisibilityConverter}}" />
                                    <controls:IconRadioButton
                                        x:Name="MoreOperationButton"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Icon="{StaticResource Todo_NoteList_More}"
                                        Style="{StaticResource Todo_CommonRadioIconButtonNoMouseOverStyle}"
                                        Visibility="Collapsed" />
                                </Grid>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ListBoxMouseBackground}" />
                                <Setter TargetName="NoteCountBlock" Property="Visibility" Value="Collapsed" />
                                <Setter TargetName="MoreOperationButton" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ListBoxSelectedBackground}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ClassificationListItemNoTriggerStyle" TargetType="{x:Type ListBoxItem}">
            <Setter Property="Height" Value="42" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="{DynamicResource ListBoxMouseBackground}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border
                            x:Name="border"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="55" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="25" />
                                </Grid.ColumnDefinitions>
                                <Image
                                    Grid.Column="1"
                                    Width="19"
                                    Source="{Binding Icon}" />
                                <TextBlock
                                    Grid.Column="3"
                                    VerticalAlignment="Center"
                                    Foreground="#191919"
                                    Text="{Binding Title}" />
                                <Grid
                                    Grid.Column="5"
                                    Margin="0,0,9,0"
                                    HorizontalAlignment="Stretch" />
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="IconNoNumberListItemStyle" TargetType="{x:Type ListBoxItem}">
            <Setter Property="Margin" Value="6,0,7,1" />
            <Setter Property="Height" Value="42" />
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="AutomationProperties.Name" Value="{Binding Title}" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBoxItem}">
                        <Border
                            x:Name="border"
                            Width="{TemplateBinding Width}"
                            Height="{TemplateBinding Height}"
                            AllowDrop="True"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="5"
                            FocusVisualStyle="{x:Null}"
                            PreviewMouseLeftButtonDown="TaskClassifiactionList_PreviewMouseLeftButtonDown">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="55" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="25" />
                                </Grid.ColumnDefinitions>
                                <Image
                                    Grid.Column="1"
                                    Width="19"
                                    Source="{Binding Icon}" />
                                <TextBlock
                                    Grid.Column="3"
                                    VerticalAlignment="Center"
                                    Foreground="#191919"
                                    Text="{Binding Title}" />
                                <Grid
                                    Grid.Column="5"
                                    Margin="0,0,9,0"
                                    HorizontalAlignment="Stretch">
                                    <controls:IconRadioButton
                                        x:Name="MoreOperationButton"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center"
                                        Icon="{StaticResource Todo_NoteList_More}"
                                        Style="{StaticResource Todo_CommonRadioIconButtonNoMouseOverStyle}"
                                        Visibility="Collapsed" />
                                </Grid>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ListBoxMouseBackground}" />
                                <Setter TargetName="MoreOperationButton" Property="Visibility" Value="Visible" />
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{DynamicResource ListBoxSelectedBackground}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="ExpanderStyle" TargetType="{x:Type Expander}">
            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        </Style>

        <!--  扁平风格 CheckBox 样式（全局可用）  -->
        <Style x:Key="FlatCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="Padding" Value="4" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid VerticalAlignment="Center">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--  复选框视觉  -->
                            <Border
                                x:Name="Box"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Background="Transparent"
                                BorderBrush="#888"
                                BorderThickness="1.5"
                                CornerRadius="2" />

                            <!--  打勾图形，用 Path 更清晰  -->
                            <Path
                                x:Name="CheckMark"
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Data="M4,10 L8,14 L16,6"
                                Stroke="#fff"
                                StrokeEndLineCap="Round"
                                StrokeLineJoin="Round"
                                StrokeStartLineCap="Round"
                                StrokeThickness="2.2"
                                Visibility="Collapsed" />

                            <!--  文本  -->
                            <ContentPresenter
                                Grid.Column="2"
                                VerticalAlignment="Center"
                                RecognizesAccessKey="True" />

                        </Grid>

                        <ControlTemplate.Triggers>
                            <!--  鼠标悬停  -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Box" Property="BorderBrush" Value="#555" />
                                <Setter TargetName="Box" Property="Background" Value="#f6f6f6" />
                            </Trigger>

                            <!--  选中  -->
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Box" Property="Background" Value="#A0A0A0" />
                                <Setter TargetName="Box" Property="BorderBrush" Value="#A0A0A0" />
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                            </Trigger>

                            <!--  禁用  -->
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Box" Property="BorderBrush" Value="#CCC" />
                                <Setter Property="Foreground" Value="#AAA" />
                                <Setter TargetName="CheckMark" Property="Stroke" Value="#EEE" />
                            </Trigger>

                            <!--  半选（Indeterminate）  -->
                            <Trigger Property="IsThreeState" Value="True">
                                <!--  仅声明，实际按需要处理  -->
                            </Trigger>
                            <Trigger Property="IsChecked" Value="{x:Null}">
                                <!--  半选时显示一个短条  -->
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Collapsed" />
                                <Setter TargetName="Box" Property="Background" Value="#0078D7" />
                                <Setter TargetName="Box" Property="BorderBrush" Value="#0078D7" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" MaxWidth="350" />
            <ColumnDefinition Width="auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Grid
            x:Name="LeftTaskTypeList"
            Grid.Column="0"
            MaxWidth="350"
            Margin="0,30,0,0"
            AllowDrop="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="315" />
                <RowDefinition Height="5" />
                <RowDefinition Height="auto" />
                <RowDefinition Height="5" />
                <RowDefinition />
            </Grid.RowDefinitions>

            <!--  分类列表  -->
            <ListBox
                x:Name="TaskClassifiactionList"
                AutomationProperties.Name="TaskClassifiactionList"
                BorderThickness="0"
                FocusVisualStyle="{x:Null}"
                ItemContainerStyle="{StaticResource ClassificationListItemStyle}"
                ItemsSource="{Binding Classifications}"
                ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                SelectedItem="{Binding SelectedClassifciation}" />

            <!--  拖拽功能区  -->
            <Canvas
                x:Name="TaskClassifiactionCanvas"
                Grid.RowSpan="3"
                AllowDrop="True"
                FocusVisualStyle="{x:Null}" />

            <!--  分割线  -->
            <Line
                Grid.Row="1"
                Margin="5,0,5,0"
                Stroke="{DynamicResource TaskPageSpiltBursh}"
                StrokeThickness="1.2"
                X1="0"
                X2="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=ActualWidth}"
                Y1="0"
                Y2="0" />

            <!--  分类功能区  -->
            <Grid Grid.Row="2">
                <StackPanel x:Name="ClassificationFuctionPanel">
                    <controls:CreateableExpander
                        x:Name="MenuExpander"
                        Margin="5,0"
                        FocusVisualStyle="{x:Null}"
                        Header="清单"
                        HeaderHeight="40"
                        Style="{StaticResource Todo_CreateableExpanderStyle}">
                        <controls:CreateableExpander.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="测试..." />
                            </StackPanel>
                        </controls:CreateableExpander.Content>
                    </controls:CreateableExpander>
                    <controls:CreateableExpander
                        x:Name="TagExpander"
                        Margin="5,0"
                        FocusVisualStyle="{x:Null}"
                        Header="标签"
                        HeaderHeight="40"
                        Style="{StaticResource Todo_CreateableExpanderStyle}">
                        <controls:CreateableExpander.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="这是一个标签..." />
                            </StackPanel>
                        </controls:CreateableExpander.Content>
                    </controls:CreateableExpander>
                    <controls:CreateableExpander
                        x:Name="FilterExpander"
                        Margin="5,0"
                        FocusVisualStyle="{x:Null}"
                        Header="过滤器"
                        HeaderHeight="40"
                        Style="{StaticResource Todo_CreateableExpanderStyle}">
                        <controls:CreateableExpander.Content>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="这是一个过滤器..." />
                            </StackPanel>
                        </controls:CreateableExpander.Content>
                    </controls:CreateableExpander>
                </StackPanel>
            </Grid>


            <!--  分割线  -->
            <Line
                Grid.Row="3"
                Margin="5,0,5,0"
                Stroke="{DynamicResource TaskPageSpiltBursh}"
                StrokeThickness="1.2"
                X1="0"
                X2="{Binding RelativeSource={RelativeSource AncestorType=Grid}, Path=ActualWidth}"
                Y1="0"
                Y2="0" />

            <!--  归档区  -->
            <ListBox
                x:Name="TaskCollection"
                Grid.Row="4"
                AutomationProperties.Name="TaskCollection"
                BorderThickness="0"
                FocusVisualStyle="{x:Null}"
                ItemContainerStyle="{StaticResource IconNoNumberListItemStyle}"
                ItemsSource="{Binding Classifications}"
                ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                ScrollViewer.VerticalScrollBarVisibility="Disabled"
                SelectedItem="{Binding SelectedClassifciation}" />

        </Grid>

        <!--  可拉伸Grid  -->
        <GridSplitter
            x:Name="TaskCatgoryList"
            Grid.Column="0"
            Style="{StaticResource Todo_GridSplitterStyle}" />

        <Grid
            Grid.Column="1"
            Margin="17,25,17,0"
            FocusVisualStyle="{x:Null}">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Width="auto">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel
                    Grid.Column="0"
                    Width="500"
                    Orientation="Horizontal">
                    <Grid>
                        <controls:IconButton
                            x:Name="FlodGridButton"
                            Width="22"
                            Height="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Click="GridFlodOpeartionButton_Click"
                            Icon="{StaticResource Todo_NoteList_Flod}"
                            Style="{StaticResource Todo_CommonIconButtonWithBackgroundMouseOverStyle}" />
                        <controls:IconButton
                            x:Name="ExpandGridButton"
                            Width="22"
                            Height="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            Click="GridExpandOpeartionButton_Click"
                            Icon="{StaticResource Todo_NoteList_Expand}"
                            Style="{StaticResource Todo_CommonIconButtonWithBackgroundMouseOverStyle}"
                            Visibility="Collapsed" />
                    </Grid>
                    <TextBlock
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="Bold"
                        Text="{Binding SelectedClassifciation.Title}" />
                </StackPanel>
                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <controls:IconButton
                        x:Name="SortTaskButton"
                        Width="22"
                        Height="20"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Click="GridFlodOpeartionButton_Click"
                        Icon="{StaticResource Todo_NoteList_Sort}"
                        Style="{StaticResource Todo_CommonIconButtonWithBackgroundMouseOverStyle}" />
                    <controls:IconButton
                        x:Name="MoreOperationButton"
                        Width="22"
                        Height="20"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        Click="GridFlodOpeartionButton_Click"
                        Icon="{StaticResource Todo_NoteList_More}"
                        Style="{StaticResource Todo_CommonIconButtonWithBackgroundMouseOverStyle}" />
                </StackPanel>
            </Grid>
            <Frame
                x:Name="TaskDataFrame"
                Grid.Column="1"
                Visibility="Collapsed" />
            <StackPanel Grid.Row="1" Grid.Column="1">
                <!--  新增任务  -->
                <userControls:AddTaskBox
                    Height="auto"
                    MinHeight="40"
                    Margin="5,15,5,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Top"
                    HeaderIcon="{StaticResource Todo_AsyncIcon}"
                    HeaderIconHeight="18"
                    HeaderIconWidth="18"
                    TextPlaceholder="添加任务"
                    Visibility="Visible" />
                <!--  任务列表  -->
                <ListBox Margin="5,5,5,0" BorderThickness="0">
                    <ListBox.ItemContainerStyle>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="FocusVisualStyle" Value="{x:Null}" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border CornerRadius="5">
                                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                <CheckBox
                                                    Width="18"
                                                    Height="18"
                                                    VerticalContentAlignment="Center"
                                                    Style="{StaticResource FlatCheckBoxStyle}" />
                                                <Grid>
                                                    <TextBox
                                                        VerticalContentAlignment="Center"
                                                        BorderThickness="0"
                                                        Text="111" />
                                                    <!--  预留图标叠加  -->
                                                </Grid>
                                            </StackPanel>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.ItemContainerStyle>
                    <ListBoxItem />
                </ListBox>
            </StackPanel>

        </Grid>

        <!--  可拉伸Grid  -->
        <GridSplitter Grid.Column="1" Style="{StaticResource Todo_GridSplitterStyle}" />


        <!--  Frame  -->
        <Frame
            x:Name="TaskPageCategoryFrame"
            Grid.Column="2"
            AutomationProperties.Name="TaskPageFrame"
            FocusVisualStyle="{x:Null}"
            Focusable="True"
            NavigationUIVisibility="Hidden"
            Visibility="Collapsed" />

        <resource:MarkdownEditor
            Grid.Column="2"
            Margin="0,30,0,0"
            CodeLanguage="C#"
            TextWrap="True"
            Visibility="Collapsed" />
    </Grid>
</local:ApplicationPageBase>
